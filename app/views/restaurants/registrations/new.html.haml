
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  
  .form-group
    = f.input :email, :label => "Correo", :required => true, :autofocus => true,  input_html: {class: "form-control", id: "inputUsernameEmail"}

  .form-group
    = f.input :password, :label => "Contraseña", :required => true, input_html: {class: "form-control"}

  .form-group
    = f.input :password_confirmation, :label => "Confirma tu contraseña", :required => true,  input_html: {class: "form-control"}

  = f.button :submit, "Registrarme", class: "btn btn btn-primary"